<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <ImageView
        android:id="@+id/lcn_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/left_img"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/lcn_img"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:src="@drawable/dredge_yes"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/play_color2"
            android:textSize="16sp"
            android:text="已开通"
            android:layout_toRightOf="@+id/lcn_img"
            android:layout_marginLeft="10dp"

            />
    </RelativeLayout>

    <View
        android:id="@+id/lcn_line1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/feeds_search_color"
        android:layout_marginTop="13.5dp"
        />
    <LinearLayout
        android:id="@+id/lcn_ll_null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(*¯︶¯*)"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:layout_marginTop="13.5dp"
            android:textColor="@color/feeds_hight_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请更多好友来玩吧"
            android:textSize="14sp"
            android:textColor="@color/feeds_hight_gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="13.5dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <com.yeejay.yplay.customview.MesureListView
        android:id="@+id/lcn_dredge_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <View
        android:id="@+id/lcn_line2"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/feeds_search_color"
        />

    <RelativeLayout
        android:id="@+id/lcn_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/selector_myinfo_item_bacnground">

        <ImageView
            android:id="@+id/lcn_img2"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/dredge_no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="11.5dp"
            android:layout_toEndOf="@+id/lcn_img2"
            android:text="邀请好友"
            android:textColor="@color/play_color2"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/lcn_arrow"
            android:layout_width="4.5dp"
            android:layout_height="7.8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.4dp"
            android:layout_marginTop="19.1dp"
            android:src="@drawable/item_arrows"
            />
    </RelativeLayout>

</LinearLayout>