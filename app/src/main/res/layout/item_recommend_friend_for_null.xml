<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <tangxiaolv.com.library.EffectiveShapeView
        android:id="@+id/ff_item_header_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        app:shape="circle"
        android:layout_marginLeft="19dp"
        />

    <TextView
        android:id="@+id/afi_item_text_family_name"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_round_background"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:text="段"
        android:gravity="center"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/af_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="段誉"
        android:layout_toRightOf="@+id/ff_item_header_img"
        android:layout_toLeftOf="@+id/af_btn_accept"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:ellipsize="end"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="19dp"
        android:paddingEnd="19dp"
        />

    <TextView
        android:id="@+id/af_item_tv_shares_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通讯录好友"
        android:layout_toRightOf="@+id/ff_item_header_img"
        android:layout_toLeftOf="@+id/af_btn_accept"
        android:layout_below="@+id/af_item_name"
        android:layout_marginLeft="19dp"
        android:paddingEnd="19dp"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/af_btn_accept"
        android:layout_width="80dp"
        android:layout_height="34sp"
        android:layout_marginRight="20dp"
        android:background="@drawable/green_add_friend"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp" />

    <Button
        android:id="@+id/af_btn_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏"
        android:background="@android:color/transparent"
        android:layout_toLeftOf="@+id/af_btn_accept"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />
</RelativeLayout>