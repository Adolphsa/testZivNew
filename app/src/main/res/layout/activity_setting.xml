<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yeejay.yplay.userinfo.ActivitySetting">

    <include layout="@layout/layout_title_bar2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="37dp"
                android:text="个人信息"
                android:textColor="@color/play_color2"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="71.5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="24dp"
                        android:text="头像"
                        android:textColor="@color/text_color_gray"
                        android:textSize="16sp" />

                    <tangxiaolv.com.library.EffectiveShapeView
                        android:id="@+id/setting_img_header"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/header_deafult"
                        app:shape="circle" />

                    <ImageView
                        android:layout_width="4.5dp"
                        android:layout_height="7.7dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="21dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/item_arrows" />
                </RelativeLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/feeds_search_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="姓名"
                        android:textColor="@color/text_color_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/setting_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:text="哈哈"
                        android:textColor="@color/feeds_hight_gray"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="4.5dp"
                        android:layout_height="7.7dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.3dp"
                        android:src="@drawable/item_arrows" />
                </RelativeLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/feeds_search_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="用户名"
                        android:textColor="@color/text_color_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/setting_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:text="12345"
                        android:textColor="@color/feeds_hight_gray"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="4.5dp"
                        android:layout_height="7.7dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.3dp"
                        android:src="@drawable/item_arrows" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_myinfo_item_bacnground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="性别"
                        android:textColor="@color/text_color_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/setting_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:text="男"
                        android:textColor="@color/feeds_hight_gray"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="4.5dp"
                        android:layout_height="7.7dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.3dp"
                        android:src="@drawable/item_arrows" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/feeds_search_color" />

            <!--学校信息-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="学校信息"
                    android:textColor="@color/play_color2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setting_school"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="21dp"
                    android:text="修改"
                    android:textColor="@color/feeds_hight_gray"
                    android:textSize="14sp"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="4.5dp"
                    android:layout_height="7.7dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20.3dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/item_arrows" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setting_school"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="学校"
                    android:textColor="@color/text_color_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setting_school_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/setting_school"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="23dp"
                    android:text="十六的月亮"
                    android:textColor="@color/feeds_hight_gray"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setting_school_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="年级"
                    android:textColor="@color/text_color_gray"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:id="@+id/setting_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/setting_school_name"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="20dp"
                    android:text="大学一年级"
                    android:textColor="@color/feeds_hight_gray"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"
                    />

            </RelativeLayout>

            <!--私人信息-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/feeds_search_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96dp">

                <TextView
                    android:id="@+id/setting_private_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="私人信息"
                    android:textColor="@color/play_color2"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setting_private_info"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="手机号码"
                    android:textColor="@color/text_color_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setting_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/setting_private_info"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:textColor="@color/feeds_hight_gray"
                    android:textSize="16sp" />
            </RelativeLayout>

            <!--联系我们-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/feeds_search_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45.5dp"
                android:background="@drawable/selector_myinfo_item_bacnground">

                <TextView
                    android:id="@+id/setting_contacts_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="联系我们"
                    android:textColor="@color/text_color_gray"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="4.5dp"
                    android:layout_height="7.7dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.4dp"
                    android:src="@drawable/item_arrows" />
            </RelativeLayout>

            <View android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/feeds_search_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45.5dp"
                android:background="@drawable/selector_myinfo_item_bacnground">

                <TextView
                    android:id="@+id/setting_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="退出登录"
                    android:textColor="@color/text_color_red"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:layout_width="4.5dp"
                    android:layout_height="7.7dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.4dp"
                    android:src="@drawable/item_arrows" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:background="@color/feeds_search_color"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="42dp"
                    android:src="@drawable/version_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="1.0版本"
                    android:textColor="@color/feeds_hight_gray"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
