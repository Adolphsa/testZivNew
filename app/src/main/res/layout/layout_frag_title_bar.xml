<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:id="@+id/base_title_rl"
    >

    <ImageButton
        android:id="@+id/frg_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/frg_edit"
        android:layout_marginStart="23dp"
        android:background="@android:color/transparent"
        android:src="@drawable/my_no_number" />

    <TextView
        android:id="@+id/frg_message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/frg_user_info"
        android:layout_alignBottom="@+id/frg_user_info"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:text=""
        android:background="@android:color/transparent"
        />
    <TextView
        android:id="@+id/frg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投稿"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="@color/edit_title_text_color"
        android:gravity="center"
        />
    <ImageButton
        android:id="@+id/frg_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/contribute_normal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        />
</RelativeLayout>