<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/edit_title_text_color"
    tools:context="com.yeejay.yplay.login.LoginAuthorization">

    <ImageButton
        android:id="@+id/laz_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_img3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            android:background="@drawable/shape_login_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="给权限才能玩哦"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="方便进去学校 找到好友"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/laz_btn_address_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通讯录"
                android:drawableTop="@drawable/contacts_no"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="@color/edit_text_color2"
                android:textSize="16sp"
                android:drawablePadding="5dp"
                />
            <Button
                android:id="@+id/laz_btn_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地理位置"
                android:drawableTop="@drawable/location_no"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="@color/edit_text_color2"
                android:textSize="16sp"
                android:drawablePadding="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/feeds_hight_gray"
                android:textSize="14sp"
                android:text="我们尊重您的隐私。您的通讯录将用来寻找正在\n使用本产品的好友。您的地理位置，将用来定位\n离您最近的学校。"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
