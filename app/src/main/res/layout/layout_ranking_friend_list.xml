<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="421dp"
    android:background="@drawable/shape_main_friend_front"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/card_friend_info_left"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/card_friend_info_right"
        android:text="好友榜"
        android:textColor="@color/my_item_font_color"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_fri_img2"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/lrfl_header_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/header_deafult"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/lrfl_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_fri_img1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lrfl_header_img"
            android:layout_marginTop="52dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="蝉联一周"
            android:layout_below="@+id/lrfl_header_img"
            android:layout_marginTop="52dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/lrfl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lrfl_img2"
            android:text="雨墨"
            android:textColor="@color/my_item_font_color"
            android:textSize="14sp"
            />
    </RelativeLayout>

</RelativeLayout>