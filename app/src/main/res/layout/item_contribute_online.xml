    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cora_item_rl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
        android:layout_height="70dp"
        android:background="@drawable/item_contribute_list_background" >

        <ImageView
            android:id="@+id/contri_online_item_header_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/header_deafult"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/contri_online_item_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/contri_online_item_header_img"
            android:layout_toLeftOf="@+id/contri_online_item_end_img"
            android:textColor="#27282C"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/contri_online_item_end_img"
            android:layout_width="10.2dp"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/heat"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/contri_heat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#27282C"
                android:textSize="8sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/contri_heat_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#27282C"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <ImageView
            android:id="@+id/contri_online_item_expand_img"
            android:layout_width="21.5dp"
            android:layout_height="5.9dp"
            android:src="@drawable/up_arrow"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

