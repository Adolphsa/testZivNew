<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingTop="5dp"
    android:paddingStart="@dimen/activity_margin_start"
    android:layout_alignParentEnd="@dimen/activity_margin_end" >

    <TextView
        android:id="@+id/item_diamond_sort"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/item_diamond_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxLength="60"
        android:ellipsize="end"
        android:textColor="#27282C"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/item_diamond_sort"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/item_diamond_lable"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />
</RelativeLayout>