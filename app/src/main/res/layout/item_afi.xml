<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

    <TextView
        android:id="@+id/afi_item_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:gravity="center"
        android:text="10"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:textSize="12sp"
        android:textColor="@color/diamond_item_index_color"

        />

    <com.yeejay.yplay.customview.RecyclerImageView
        android:id="@+id/afi_item_img"
        android:layout_width="@dimen/item_diamonds_list_img_width"
        android:layout_height="@dimen/item_diamonds_list_img_height"
        android:src="@drawable/diamond"
        android:layout_toRightOf="@+id/afi_item_index"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/afi_item_text"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:text="我可以和他说所有的话"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/afi_item_img"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/afi_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_centerVertical="true"
        android:textColor="@color/diamond_item_index_color"
        android:textSize="16sp"
        android:textStyle="bold"
        />
</RelativeLayout>