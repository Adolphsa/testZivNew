<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.yeejay.yplay.friend.ActivitySearchFriends">
    
    <RelativeLayout
        android:id="@+id/asf_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <SearchView
            android:id="@+id/asf_search_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:iconifiedByDefault="false"
            android:queryHint="搜索用户名"
            android:layout_toLeftOf="@+id/asf_btn_cancel"
            />
        <ImageButton
            android:id="@+id/asf_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_cancel"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/asf_tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索结果"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:textColor="@color/play_color2"
        android:layout_below="@+id/asf_rl"
        android:layout_marginTop="20dp"
        />

    <ListView
        android:id="@+id/asf_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/asf_tv_result"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/asf_no_found_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_found_img"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/asf_no_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_found"
        android:layout_below="@+id/asf_tv_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        />
</RelativeLayout>
