<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

     <ImageView
         android:layout_width="186dp"
         android:layout_height="186dp"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:src="@drawable/feeds_null"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@color/feeds_hight_gray"
        android:textSize="14sp"
        android:text="看看好友在别人心中的印象"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/frf_btn_add_friend"
        android:layout_width="197dp"
        android:layout_height="44dp"
        android:text="添加好友"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/selector_feeds_add_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        />
    <RelativeLayout
        android:id="@+id/frf_recommend_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        >
        <ImageView
            android:id="@+id/frf_img1"
            android:layout_width="19dp"
            android:layout_height="18dp"
            android:src="@drawable/feeds_column_on"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扩列开启"
            android:layout_toRightOf="@+id/frf_img1"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/feeds_title_color"
            />

        <ListView
            android:id="@+id/frf_list_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/frf_img1"
            />
        <TextView
            android:id="@+id/frf_no_more_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="不再显示"
            android:textColor="@color/feeds_hight_gray"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_below="@+id/frf_list_view"
            />
    </RelativeLayout>
</LinearLayout>