<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

     <ImageView
         android:layout_width="186dp"
         android:layout_height="186dp"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:src="@drawable/feeds_null"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@color/feeds_hight_gray"
        android:textSize="14sp"
        android:text="看看好友在别人心中的印象"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/frf_btn_add_friend"
        android:layout_width="197dp"
        android:layout_height="44dp"
        android:text="添加好友"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/selector_feeds_add_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        />
    <RelativeLayout
        android:id="@+id/frf_recommend_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/frf_tip_img"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/feeds_slice"
            />
        <ImageView
            android:id="@+id/frf_img1"
            android:layout_width="19dp"
            android:layout_height="18dp"
            android:src="@drawable/red_expond"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/frf_tip_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扩列开启"
            android:layout_toRightOf="@+id/frf_img1"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/feeds_title_color"
            android:layout_below="@+id/frf_tip_img"
            />
        <Button
            android:id="@+id/frf_no_more_show"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="不再显示"
            android:textColor="@color/text_color_gray2"
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:drawableRight="@drawable/delete_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/frf_tip_img"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/feeds_hight_gray45"
            android:layout_below="@id/frf_img1"
            android:layout_marginTop="13.5dp"
            />
        <ListView
            android:id="@+id/frf_list_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/frf_img1"
            />
        <TextView
            android:id="@+id/frf_see_more"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="查看更多"
            android:textColor="@color/feeds_title_color"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_below="@+id/frf_list_view"
            android:background="@drawable/shape_no_show_btn"
            android:drawableLeft="@drawable/red_hand"
            android:layout_centerHorizontal="true"
            android:drawablePadding="4dp"
            />

    </RelativeLayout>
</LinearLayout>