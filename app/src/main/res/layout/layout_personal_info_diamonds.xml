<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/shape_my_activity_item_background_unselected">

    <RelativeLayout
        android:id="@+id/lpid_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/friend_iv1"
            android:layout_width="@dimen/personal_icon_width"
            android:layout_height="@dimen/personal_icon_height"
            android:src="@drawable/personal_friends_dimand"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/friend_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/my_item_font_color"
            android:text="@string/friend_diamonds"
            android:layout_toRightOf="@id/friend_iv1"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/diamond_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/my_item_font_color"
            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/friend_arrows"
            android:layout_width="4.5dp"
            android:layout_height="7.7dp"
            android:src="@drawable/personal_info_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.4dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/lpid_diamond_list"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lpid_lin"
        android:divider="@null"
        />
</RelativeLayout>