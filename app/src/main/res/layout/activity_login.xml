<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_root_view"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:layout_gravity="bottom"
    android:layout_weight="1"
    android:background="@color/feeds_title_color"
    tools:context="com.yeejay.yplay.login.Login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/feeds_title_color"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="欢迎"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="这是一个啥啥啥的App"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="54dp"
                android:src="@drawable/login_img1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_login_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/tv86"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="72dp"
                        android:layout_marginTop="50dp"
                        android:text="+86"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/login_edt_number"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:background="@null"
                        android:hint="@string/login_et_phone_number"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/black20"
                        android:textCursorDrawable="@drawable/shape_cursor_drawable"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="5.5dp"
                    android:src="@drawable/login_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/login_edt_auth_code"
                        android:layout_width="180dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="72dp"
                        android:layout_marginTop="40dp"
                        android:background="@null"
                        android:hint="@string/login_edt_auth_code"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColorHint="@color/black20"
                        android:textCursorDrawable="@drawable/shape_cursor_drawable"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/login_get_auth_code"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="40dp"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:gravity="bottom"
                        android:text="@string/login_get_auth_code"
                        android:textColor="@color/black50"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="5.5dp"
                    android:src="@drawable/login_line" />

                <TextView
                    android:id="@+id/test_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="19.5dp"
                    android:text="注册代表你已阅读并同意用户协议与隐私条款"
                    android:textColor="@color/feeds_hight_gray50"
                    android:textSize="10sp"
                    />

                <Button
                    android:id="@+id/login_btn_next"
                    android:layout_width="204dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_login_btn_background"
                    android:enabled="false"
                    android:text="@string/login_next"
                    android:textColor="@color/text_color_gray2"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>
        </LinearLayout>

</ScrollView>