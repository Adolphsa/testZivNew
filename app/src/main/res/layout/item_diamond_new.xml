<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <ImageView
        android:id="@+id/afi_item_index"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/diamond_top1"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/afi_item_text"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:text="我可以和他说所有的话"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/afi_item_index"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        />

    <com.yeejay.yplay.customview.RecyclerImageView
        android:id="@+id/afi_item_img"
        android:layout_width="@dimen/item_diamonds_list_img_width"
        android:layout_height="@dimen/item_diamonds_list_img_height"
        android:src="@drawable/diamond"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        />
    
</RelativeLayout>