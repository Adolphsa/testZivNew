<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.yeejay.yplay.contribute.ActivityContribute1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.28"
        android:background="@drawable/contribute_query_header_img"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/layout_title_back2"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_white"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY" />
    </LinearLayout>

        <!--
        <ImageView
            android:id="@+id/con_selected_img"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:src="@drawable/contribute_query_header_img" />
            -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.72"
        android:orientation="vertical" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/online_tab"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:text="@string/contribute_online"
                android:textSize="16sp"
                android:textColor="#3B3C40"
                android:gravity="center" />
            <TextView
                android:id="@+id/offline_tab"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:text="@string/contribute_offline"
                android:textSize="16sp"
                android:textColor="#3B3C40"
                android:gravity="center" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/contribute_new"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:src="@drawable/contribute_new"
                    android:paddingStart="100dp"
                    android:visibility="invisible"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:text="@string/contribute_offline"
                    android:visibility="invisible"
                    android:gravity="center" />
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="18dp"
            android:layout_height="3dp"
            android:gravity="center"
            android:background="@drawable/shape_contribute_query_indicator" />

        <android.support.v4.view.ViewPager
            android:id="@+id/contribute_query_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>