<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="11dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_main_current_question_friend_front">

        <LinearLayout
            android:id="@+id/lccqfl_ll1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="32dp"
            >
            <tangxiaolv.com.library.EffectiveShapeView
                android:id="@+id/lccqfl_header_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/header_deafult"
                app:shape="circle"
                />
            <TextView
                android:id="@+id/lccqfl_over_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你已经超过了100%的好友"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/lccqfl_question_content"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="要十五个字要十五个字要十五个字要十五个字"
            android:textColor="@color/white"
            android:layout_below="@+id/lccqfl_ll1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/lccqfl_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="46dp"
            android:drawableLeft="@drawable/card_friend_info_left"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/card_friend_info_right"
            android:text="好友榜"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lccqfl_question_content"
            />

        <com.yeejay.yplay.customview.NotClickListView
            android:id="@+id/lccqfl_list"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_below="@+id/lccqfl_text1"
            android:divider="@null"
            />
        <TextView
            android:id="@+id/lccqfl_default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投上一票，江湖可现"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lccqfl_text1"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="70dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>