<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:id="@+id/lmc_root_ll"
    >
    
    <RelativeLayout
        android:id="@+id/lmc_root_rl"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginRight="21dp"
        android:layout_marginLeft="21dp"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@drawable/envelope_bottom"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            />
        <RelativeLayout
            android:id="@+id/lmc_card_rl"
            android:layout_width="180.8dp"
            android:layout_height="258.8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/envelope_background"
            >

            <ImageView
                android:id="@+id/lmc_ques_head_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.4dp"
                android:src="@drawable/header_deafult"
                />
            <TextView
                android:id="@+id/lmc_ques_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啦啦啦"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/message_title_color"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lmc_ques_head_img"
                />
            <LinearLayout
                android:id="@+id/lmc_button12_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15.4dp"
                android:layout_marginRight="15.4dp"
                android:layout_below="@+id/lmc_ques_text"
                android:layout_marginTop="20dp"
                >
                <Button
                    android:id="@+id/lmc_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="button1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/black50"
                    android:background="@drawable/button_white_background"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    />
                <Button
                    android:id="@+id/lmc_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="button2"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/black50"
                    android:background="@drawable/button_white_background"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lmc_button34_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15.4dp"
                android:layout_marginRight="15.4dp"
                android:layout_below="@+id/lmc_button12_ll"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/lmc_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="button3"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/black50"
                    android:background="@drawable/button_white_background"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    />
                <Button
                    android:id="@+id/lmc_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="button3"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/black50"
                    android:background="@drawable/button_white_background"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/envelope_top"
            android:scaleType="fitXY"
            />

    </RelativeLayout>

</LinearLayout>