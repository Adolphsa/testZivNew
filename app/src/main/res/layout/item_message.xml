<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="79dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_background">
    <tangxiaolv.com.library.EffectiveShapeView
        android:id="@+id/msg_item_header_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/header_deafult"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        app:shape="circle"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/msg_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="韩梅梅"
        android:layout_toRightOf="@+id/msg_item_header_img"
        android:textColor="@color/text_color_gray"
        android:textSize="18sp"
        android:layout_marginTop="16.5dp"
        android:layout_marginLeft="18.5dp"
        />
    <TextView
        android:id="@+id/msg_item_cuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="戳了你"
        android:layout_toRightOf="@+id/msg_item_name"
        android:textColor="@color/text_color_gray"
        android:textSize="18sp"
        android:layout_marginTop="16.5dp"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:orientation="horizontal"
        android:layout_below="@id/msg_item_name"
        android:layout_alignLeft="@id/msg_item_name"
        android:layout_marginTop="6dp"
        >
        <ImageView
            android:id="@+id/msg_item_send_status_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/header_deafult"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/msg_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="永不停息对工作的热爱"
            android:textSize="14sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/msg_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45分钟前"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16.5dp"
        android:textSize="14sp"
        android:textColor="@color/text_color_gray4"
        />
    
</RelativeLayout>