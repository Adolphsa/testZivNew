<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layouot_frag_title_bar" />

    <TextView
        android:id="@+id/frgans_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="1/15" />

    <ImageView
        android:id="@+id/frgans_img"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/app_img"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/frgans_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这个人的笑声最魔性"
        android:layout_gravity="center"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/frgans_btn1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="faker"
            android:layout_marginLeft="60dp"
            />
        <Button
            android:id="@+id/frgans_btn2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="孙亚龙"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            />
        <Button
            android:id="@+id/frgans_btn3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="笑笑"
            android:layout_below="@+id/frgans_btn1"
            android:layout_marginLeft="60dp"
            />
        <Button
            android:id="@+id/frgans_btn4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="五五开"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/frgans_btn2"
            android:layout_marginRight="60dp"
            />
        <TextView
            android:id="@+id/frgans_tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="或者"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/frgans_tv_relieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解除冷却"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_below="@id/frgans_tv_or"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frgans_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        >

        <Button
            android:id="@+id/frgans_tn_next_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换批人"
            android:background="@android:color/transparent"
            android:layout_marginLeft="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp" />
        <Button
            android:id="@+id/frgans_btn_keep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击继续"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/frgans_btn_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请好友"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/frgans_btn_next_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="过"
            android:background="@android:color/transparent"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>