<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yeejay.yplay.userinfo.ActivityMyInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/my_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="返回" />

        <TextView
            android:id="@+id/my_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/my_ib_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/userinfo_small" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_border"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        >
        <TextView
            android:id="@+id/ami_tv_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="积水潭师专"
            android:textSize="20sp"
            android:padding="3dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ami_item_header_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:padding="3dp"
                />
            <TextView
                android:id="@+id/ami_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南帝北丐"
                android:layout_toRightOf="@+id/ami_item_header_img"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/ami_tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="faker"
                android:layout_toRightOf="@+id/ami_item_header_img"
                android:layout_below="@+id/ami_tv_name"
                android:textSize="16sp"
                android:padding="3dp"
                />
            <ImageView
                android:id="@+id/ami_small_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/userinfo_small"
                android:layout_toRightOf="@+id/ami_item_header_img"
                android:layout_below="@+id/ami_tv_name2"
                android:padding="3dp"
                />
            <TextView
                android:id="@+id/ami_tv_is_graduate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012年  大学二年级"
                android:layout_toRightOf="@+id/ami_small_img"
                android:layout_below="@+id/ami_tv_name2"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/ami_btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/userinfo_small"
                android:layout_alignBottom="@+id/ami_tv_is_graduate"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/afi_tv_friends_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="503好友"
                />
            <TextView
                android:id="@+id/afi_tv_diamond_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300钻石"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="top钻石"
        android:padding="5dp"
        android:textSize="18sp"
        android:background="@android:color/darker_gray"
        />
    <ListView
        android:id="@+id/ami_diamond_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="朋友23"
        android:padding="5dp"
        android:textSize="18sp"
        android:background="@android:color/darker_gray"
        />
    <ListView
        android:id="@+id/ami_friends_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
