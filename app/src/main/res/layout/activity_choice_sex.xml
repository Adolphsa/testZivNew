<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/play_color4"
    tools:context="com.yeejay.yplay.login.ChoiceSex">


    <ImageButton
        android:id="@+id/cs_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_img6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            android:background="@drawable/shape_login_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="确认性别"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="低头好好看"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cs_btn_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女生"
                android:drawableTop="@drawable/girl_select"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="52dp"
                android:textColor="@color/feeds_title_color"
                android:textSize="16sp"
                android:drawableRight="@drawable/item_arrows"
                />
            <Button
                android:id="@+id/cs_btn_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男生"
                android:drawableTop="@drawable/boy_select"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:textColor="@color/play_color4"
                android:textSize="16sp"
                android:drawableRight="@drawable/item_arrows"
                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
