<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="11dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_main_friend_front">
        <TextView
            android:id="@+id/lcfl_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="56dp"
            android:drawableLeft="@drawable/card_friend_info_left"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/card_friend_info_right"
            android:text="好友榜"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_fri_img2"
            android:layout_centerInParent="true"
            android:layout_below="@id/lcfl_text1"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="90dp">
            <tangxiaolv.com.library.EffectiveShapeView
                android:id="@+id/lrfl_header_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/header_deafult"
                android:layout_centerInParent="true"
                app:shape="circle"
                />
            <ImageView
                android:id="@+id/lrfl_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_fri_img1"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lrfl_header_img"
                android:layout_marginTop="65dp"
                />
            <TextView
                android:id="@+id/lrfl_week_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="蝉联1周"
                android:layout_below="@+id/lrfl_header_img"
                android:layout_marginTop="65dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/lrfl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lrfl_img2"
                android:text="雨墨"
                android:textColor="@color/white"
                android:textSize="14sp"
                />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>