<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67dp">

    <ImageView
        android:id="@+id/item_diamond_top_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/diamond_top1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:scaleType="fitXY"

        />
    <ImageView
        android:id="@+id/item_diamond_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/diamond_top1"
        android:layout_toRightOf="@+id/item_diamond_top_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/item_diamond_text"
        android:layout_width="245dp"
        android:layout_height="34dp"
        android:text="diamond"
        android:textSize="12sp"
        android:textColor="@color/text_color_gray3"
        android:layout_toRightOf="@+id/item_diamond_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        />
</RelativeLayout>