<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.yeejay.yplay.contribute.ActivityContribute1">

    <include layout="@layout/layout_title_bar2"/>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_con1_backround"
        android:layout_marginTop="23dp"
        >
        <ImageView
            android:id="@+id/con_img"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/con_emoji_img"
            />
        <EditText
            android:id="@+id/con_edit"
            android:layout_width="match_parent"
            android:layout_height="124.7dp"
            android:layout_below="@+id/con_img"
            android:background="@color/contribute_edit_color"
            android:hint="输入问题"
            android:textColorHint="@color/white40"
            android:gravity="top|center_horizontal"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:maxLength="30"

            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/con_apply_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/con_text_count"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="0/30"
            android:textSize="14sp"
            android:textColor="@color/feeds_hight_gray"
            android:layout_marginTop="19.8dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="匿名投稿，同校同级会优先看到"
            android:textSize="14sp"
            android:textColor="@color/feeds_hight_gray"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/con_apply_button"
            android:layout_width="197dp"
            android:layout_height="44dp"
            android:text="提交"
            android:textColor="@color/text_color_gray2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_gray_btn_backround"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/con_complete_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="匿名投稿成功，审核中(*^__^*)"
            android:textSize="14sp"
            android:textColor="@color/feeds_hight_gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="19.8dp"
            />
        <Button
            android:id="@+id/con_complet_button"
            android:layout_width="197dp"
            android:layout_height="44dp"
            android:text="完成"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_purple_btn_backround"
            android:textSize="16sp"

            />
    </LinearLayout>

</LinearLayout>
