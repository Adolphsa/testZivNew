<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include layout="@layout/layout_title_bar2"/>

    <include layout="@layout/layout_user_info"/>

    <include layout="@layout/layout_user_info_diamond"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/feeds_search_color" />

    <include layout="@layout/layout_user_info_friends"
        android:id="@+id/layout_my_friend"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/feeds_search_color" />

    <TextView
        android:id="@+id/remove_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="解除好友"
        android:textColor="@color/play_color2"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/feeds_search_color" />
</LinearLayout>