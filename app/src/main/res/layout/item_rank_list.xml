<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/irl_item_index"
        android:layout_width="22dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/rank_diamond1"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        />

    <tangxiaolv.com.library.EffectiveShapeView
        android:id="@+id/irl_header_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/header_deafult"
        app:shape="circle"
        android:layout_gravity="center"
        android:layout_marginLeft="14dp"
        />

    <TextView
        android:id="@+id/irl_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/afi_item_index"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="12sp"
        />

</LinearLayout>