<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yeejay.yplay.friend.AddFriends">

    <include layout="@layout/layout_title_bar2" />

    <com.jwenfeng.library.pulltorefresh.PullToRefreshLayout
        android:id="@+id/friend_pll_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="搜索门牌号"
                    android:textColor="@color/feeds_hight_gray"
                    android:drawableLeft="@drawable/search"
                    android:gravity="center_vertical"
                    android:drawablePadding="15dp"
                    android:background="@color/feeds_search_color"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="30dp"
                    android:background="@color/white"
                    android:paddingBottom="14dp"
                    >

                    <Button
                        android:id="@+id/af_btn_add_contacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通讯录好友"
                        android:background="@android:color/transparent"
                        android:textColor="@color/feeds_text_color"
                        android:drawableTop="@drawable/feeds_contacts"
                        android:drawablePadding="8dp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/af_btn_add_schoolmate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同校同学"
                        android:background="@android:color/transparent"
                        android:textColor="@color/feeds_text_color"
                        android:drawableTop="@drawable/feeds_school_mate"
                        android:drawablePadding="8dp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/af_btn_wait_invite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可能认识的人"
                        android:background="@android:color/transparent"
                        android:textColor="@color/feeds_text_color"
                        android:drawableTop="@drawable/feeds_wait_invite"
                        android:drawablePadding="8dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <include layout="@layout/layout_contacts_null"
                    android:id="@+id/layout_contact"

                    />
                <include layout="@layout/layout_school_mate"
                    android:id="@+id/layout_school_mate"
                    android:visibility="gone"
                    />
                <include layout="@layout/layout_maybe_know"
                    android:id="@+id/layout_maybe_know"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </ScrollView>



    </com.jwenfeng.library.pulltorefresh.PullToRefreshLayout>





</LinearLayout>
